<div class="container admin-container">
  <div class="admin-header">
    <h1>Admin Dashboard</h1>
    <a href="/" class="btn">View Public Site</a>
  </div>
  
  <div class="admin-stats">
    <div class="stat-card">
      <h3>Total Movies</h3>
      <p class="stat-number"><%= totalMovies %></p>
    </div>
  </div>
  
  <div class="admin-section">
    <h2>Quick Actions</h2>
    <div class="quick-actions">
      <a href="/admin/movies/new" class="btn btn-primary">Add New Movie</a>
      <a href="/admin/movies" class="btn">Manage Movies</a>
    </div>
  </div>
  
  <div class="admin-section">
    <h2>Recent Movies</h2>
    <table class="admin-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Year</th>
          <th>Rating</th>
          <th>Reviews</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (recentMovies.length === 0) { %>
          <tr>
            <td colspan="5" class="no-data">No movies yet</td>
          </tr>
        <% } else { %>
          <% recentMovies.forEach(movie => { %>
            <tr>
              <td><%= movie.title %></td>
              <td><%= movie.year %></td>
              <td>‚≠ê <%= movie.rating %>/10</td>
              <td><%= movie.reviews.length %></td>
              <td>
                <a href="/movie/<%= movie._id %>" class="btn-small">View</a>
                <a href="/admin/movies/<%= movie._id %>/edit" class="btn-small">Edit</a>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
